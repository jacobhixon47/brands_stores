<h1 class="cyan-text"><%= @brand.name() %></h1>

<% if @brand_stores.any? %>
  <h3 class="cyan-text">Where To Buy</h3>
  <ul class="cyan-text">
    <% @brand_stores.each() do |store| %>
      <li class="cyan-text"><a href="/stores/<%= brand.id() %>"><%= store.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h3 class="cyan-text">This brand is not in stores yet</h3>
<% end %>
